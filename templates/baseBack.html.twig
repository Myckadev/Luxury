<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <link rel="icon" type="image/png" href="{{ asset('upload/bijoux-pierre.png') }}">
        <title>{% block title %}Luxery | {% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/lux/bootstrap.min.css" integrity="sha384-9+PGKSqjRdkeAU7Eu4nkJU8RFaH8ace8HGXnkiKMP9I9Te0GJ4/km3L1Z8tXigpG" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}">Luxery</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarColor03">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('home') }}"><i class="fas fa-home"></i> Accueil</a>
                        </li>
                    </ul>
                    <div class="d-flex" style="margin-right: 50px">
                        <li class="nav-item dropdown " style="list-style-type: none;">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i> {{ app.user.username }}</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#"><i class="fas fa-user"></i> Profil</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('logout')}}"><i class="fas fa-sign-out-alt"></i> Déconexion</a>
                            </div>
                        </li>
                    </div>
                </div>
            </div>
        </nav>


        <div class="sidebar bg-light">
            <a class="" href="{{ path('home') }}"><i class="fas fa-sign-out-alt"></i> Quitter le panel</a>
            <li class="nav-item dropdown " style="list-style-type: none;">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-cogs"></i> Option Articles</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('addArticle')}}"><i class="fas fa-plus"></i> Ajout d'un article</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('listeArticle') }}"><i class="fas fa-list"></i> Liste des articles</a>
                </div>
            </li>
            <li class="nav-item dropdown " style="list-style-type: none;">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-cogs"></i> Option Catégorie</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('addCategory') }}"><i class="fas fa-plus"></i> Ajout d'une catégorie</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('listCategory') }}"><i class="fas fa-list"></i> Liste de catégorie</a>
                </div>
            </li>
            <a class="" href="{{ path('userManager') }}"><i class="fas fa-list"></i> Utilisateurs</a>
            <a class="" href="{{ path('gestionCommande') }}"><i class="fas fa-cart-arrow-down"></i> Gestion Commande</a>
            <a href="#about"><i class="fas fa-address-card"></i> À propos</a>
        </div>

        <div class="content">
            <div class="row justify-content-center mb-3">
                <div class="col-md-6 d-flex justify-content-center" style="margin-top: 15px">
                    <h1>{% block TitrePage %}{% endblock %}</h1>
                </div>
            </div>
            <div class="container mt-3">
                {% block body %}{% endblock %}
            </div>
        </div>


        {% block JS %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </body>
</html>
