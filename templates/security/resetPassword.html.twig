{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}Réinitialisation du mot de passe
{% endblock %}

{% block TitrePage %}
    Compte | Réinitialisation du mot de passe
{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form method="post" action="{{ path('resetPassword') }}">
                <input type="hidden" name="id" value="{{ id }}">
                <div class="mb-3">
                    <label for="password">Mot de passe</label>
                    <input class="form-control" type="password" id="password" placeholder="Saisir votre nouveau mot de passe" name="password">
                </div>
                <div class="mb-3">
                    <label for="password">Confirmation du mot de passe</label>
                    <input class="form-control" type="password" id="password" placeholder="Saisir votre nouveau mot de passe" name="confirmPassword">
                </div>
                <button class="btn btn-primary" type="submit">Réinitialiser</button>
            </form>
        </div>
    </div>
{% endblock %}


